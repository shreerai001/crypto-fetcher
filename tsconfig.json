{
  "compilerOptions": {
    "target": "ES2020",       // Use modern JS targeting Lambda Node.js runtime
    "module": "CommonJS",     // Required for Node.js
    "outDir": "./dist",       // Directory where output files are written
    "rootDir": "./src",       // Root directory of your source TypeScript files
    "strict": true,           // Enable strict type-checking options
    "esModuleInterop": true,  // Enable interoperability between CommonJS and ES Modules
    "skipLibCheck": true      // Skip type checking of declaration files
  },
  "include": ["src/**/*"],    // Include all source files
  "exclude": ["node_modules", "dist"] // Exclude unnecessary files
}